<%- include('partials/header') %>
    <a class="back-home" href="/"><i class="fas fa-arrow-alt-circle-left"></i></a>

    <div class="container log mt-5">
        <h1>Sign in</h1>

        <div class="row">
            <div class="oauth col-sm-8">
                <div class="card">
                    <div class="card-body">

                        <form action="/login" method="POST">
                            <div class="form-group">
                                <!-- <label for="email">Email</label> -->
                                <input type="email" autofocus autocomplete="off" placeholder="Email" class="form-control field" name="username">
                                <i class="fas fa-envelope errspan"></i>
                            </div>
                            <div class="form-group">
                                <!-- <label for="password">Password</label> -->
                                <input type="password" placeholder="Password" id="password" class="form-control field" name="password">
                                <i class="fas fa-eye eyespan" aria-hidden="true" id="eye" onclick="toggle()"></i>
                                <i class="fas fa-key errspan"></i>
                            </div>
                            <button type="submit" class="btn btn-dark button">Sign in</button>
                        </form>

                    </div>
                </div>
                <p class="sign">Don't have an account? Create one <a href="/register">here</a></p>
            </div>

            <div class="oauth col-sm-8 col-md-8 col-lg-8">
                <div class="card">
                    <div class="card-body">
                        <a class="btn btn-block btn-social btn-google" href="/auth/google" role="button">
                            <i class="fab fa-google"></i> Sign In with Google
                        </a>
                    </div>
                    <div class="card-body">
                        <a class="btn btn-block btn-social btn-github" href="/auth/github" role="button">
                            <i class="fab fa-github"></i> Sign In with Github
                        </a>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <script type="text/javascript" src="scripts/dom.js"></script>

    <%- include('partials/footer') %>