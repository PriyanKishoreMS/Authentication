<%- include('partials/header') %>

    <div class="jumbotron text-center">
        <div class="container">
            <i class="fas fa-key fa-6x"></i>
            <h1 class="display-3">The one with all the secrets!</h1>
            <hr>
            <%  usersWithSecret.forEach(user => { %>
                <% user.secret.forEach(secret => { %>
                    <p class="secret-text">
                        <%= secret %>
                    </p>

                    <% }) %>
                        <% }) %>
                            <hr>

                            <a class="btn btn-outline-dark submit-button btn-lg" href="/logout" role="button">Log Out</a>
                            <a class="btn btn-dark btn-lg submit-button" href="/submit" role="button">Add a secret</a>
        </div>
    </div>

    <%- include('partials/footer') %>